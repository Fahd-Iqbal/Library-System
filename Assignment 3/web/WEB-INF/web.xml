<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>webui.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete_1_book</servlet-name>
        <servlet-class>webui.Delete_1_book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>List_all_books</servlet-name>
        <servlet-class>webui.List_all_books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Add_1_book</servlet-name>
        <servlet-class>webui.Add_1_book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update_1_book</servlet-name>
        <servlet-class>webui.Update_1_book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_add_page</servlet-name>
        <servlet-class>webui.Display_add_page</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_update_page</servlet-name>
        <servlet-class>webui.Display_update_page</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete_all_books</servlet-name>
        <servlet-class>webui.Delete_all_books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_logout_page</servlet-name>
        <servlet-class>webui.Display_logout_page</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_error_page</servlet-name>
        <servlet-class>webui.Display_error_page</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_image</servlet-name>
        <servlet-class>webui.Display_image</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete_1_book</servlet-name>
        <url-pattern>/Delete_1_book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>List_all_books</servlet-name>
        <url-pattern>/List_all_books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add_1_book</servlet-name>
        <url-pattern>/Add_1_book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update_1_book</servlet-name>
        <url-pattern>/Update_1_book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_add_page</servlet-name>
        <url-pattern>/Display_add_page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_update_page</servlet-name>
        <url-pattern>/Display_update_page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete_all_books</servlet-name>
        <url-pattern>/Delete_all_books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_logout_page</servlet-name>
        <url-pattern>/Display_logout_page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_error_page</servlet-name>
        <url-pattern>/Display_error_page</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/Display_error_page</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>Display_image</servlet-name>
        <url-pattern>/Display_image</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>users</param-name>
        <param-value> /WEB-INF/users.json</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>login_page.jsp</welcome-file>
    </welcome-file-list>
</web-app>
